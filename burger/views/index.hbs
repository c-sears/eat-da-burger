
<div class="container">
    <div class="heading">
        <h1 class="text-center">What-a-burger</h1>
    </div>

    <div class="section">
        <div class="left col-xs-6">
            {{> uneaten_burgers}}
        </div>
        <div class="right col-xs-6">
            {{> eaten_burgers}}
        </div>
    </div>

    <div class="section">
        <div class="form-group">
            <label for="new_burger">Add new burger</label>
            <input type="text" name="new_burger" class="form-group-item" id="new_burger">
            <button class="btn btn-primary" id="add_burger">Add!</button>
        </div>
    </div>

</div>

